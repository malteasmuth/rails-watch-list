<nav class="navbar navbar-lewagon .navbar-collapse">
  <div class="container-fluid d-flex">
    <%= link_to "Home", lists_path, class: "btn btn-primary"%>
    <h2><%= @list.name %></h2>
    <%= link_to "Delete List", list_path(@list),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
     class:"btn btn-danger"%>
  </div>
</nav>

<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0, 0.1),rgba(0,0,0, 0.1)), url(<%= asset_path('bookmark_bg.jpg')%>)">
  <% @list.bookmarks.each do |bookmark| %>
  <h3><%= bookmark.movie.title%></h3>
  <h4><%= bookmark.comment%></h4>
  <p><%= link_to "remove from list", bookmark_path(bookmark.id),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary"%></p>
    <% end%>
</div>

<div class="footer">
  <%= link_to "add movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>
  <%= link_to "back", root_path, class: "btn btn-primary"%>
</div>
